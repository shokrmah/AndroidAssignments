<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/base_layout">


        <ImageView
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/corner_margin"
            android:layout_marginTop="@dimen/corner_margin"
            android:id="@+id/user_image"
            android:src="@drawable/img1"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:layout_toRightOf="@+id/user_image"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Mahmoud Shokr"
            android:textColor="#000000"
            android:textStyle="bold"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_toRightOf="@+id/user_name"
            android:text="\@MShokr"
            android:textColor="#d3d3d3"
            android:layout_marginLeft="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_time"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/corner_margin"
            android:layout_marginRight="@dimen/corner_margin"
            android:text="3 hours"
            android:textColor="#d3d3d3"
            android:textSize="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_toRightOf="@+id/user_image"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:textColor="#000000"
            android:id="@+id/tweet_text"
            android:text="hello my first tweet"
            />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/base_layout"
        android:weightSum="4"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height"
            android:layout_weight="1"
            android:id="@+id/image_reply"
            android:src="@drawable/test_screen_imageview1"
            />



        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height"
            android:layout_weight="1"
            android:id="@+id/image_retweet"
            android:src="@drawable/test_screen_imageview2"
            />


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/image_height"
            android:id="@+id/image_favourite"
            android:src="@drawable/test_screen_imageview3"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/image_height"
            android:id="@+id/image_add"
            android:src="@drawable/test_screen_imageview4"
            />


    </LinearLayout>





</RelativeLayout>